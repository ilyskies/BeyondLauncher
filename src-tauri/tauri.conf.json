{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "beyondlauncher",
  "version": "0.1.0",
  "identifier": "com.beyond.services.launcher",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bun dev",
    "beforeBuildCommand": "bun build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Beyond Launcher",
        "url": "/home",
        "width": 1200,
        "height": 720,
        "resizable": true,
        "decorations": false,
        "visible": true,
        "center": true
      }
    ],
    "security": {
      "assetProtocol": {
        "scope": ["*/**"],
        "enable": true
      },
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["beyond"]
      }
    }
  }
}
