{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "anoralauncher",
  "version": "0.1.0",
  "identifier": "com.anora.services.launcher",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bun dev",
    "beforeBuildCommand": "bun build"
  },
  "app": {
    "windows": [
      {
        "label": "updater",
        "title": "Anora Updater",
        "url": "/updater",
        "width": 420,
        "height": 700,
        "resizable": false,
        "decorations": false,
        "transparent": false,
        "visible": true,
        "center": true
      },
      {
        "label": "launcher",
        "title": "Anora Launcher",
        "url": "/",
        "width": 1440,
        "height": 768,
        "resizable": true,
        "decorations": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
